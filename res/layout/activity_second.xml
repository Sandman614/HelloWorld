<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SecondActivity" >

    <Button
        android:id="@+id/remove_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:drawableLeft="@android:drawable/ic_menu_delete"
        android:onClick="removeNotification"
        android:text="@string/removeButton" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@android:drawable/ic_menu_add"
        android:onClick="addNotification"
        android:text="@string/addButton" />

    <EditText
        android:id="@+id/editMaintText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/remove_button"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/editIinterval"
        android:ems="10"
        android:gravity="left|center_vertical"
        android:hint="@string/hintMaint"
        android:inputType="text" />

    <EditText
        android:id="@+id/editIinterval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/remove_button"
        android:layout_alignParentRight="true"
        android:ems="5"
        android:gravity="right|center_vertical"
        android:hint="@string/hintInterval"
        android:inputType="number" />

    <ListView
        android:id="@+id/maintListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editMaintText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/hello_world2" />
"

</RelativeLayout>